{
	"name": "vampire",
	"displayName": "vampire",
	"description": "",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.59.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:extension.map",
		"onCommand:extension.sort",
		"onCommand:extension.uniq",
		"onCommand:extension.join",
		"onCommand:extension.trans",
		"onCommand:extension.filter",
		"onCommand:extension.shuffle",
		"onCommand:extension.reverse",
		"onCommand:extension.capitalize"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.map",
				"title": "Make a transformation to each element in selections"
			},
			{
				"command": "extension.trans",
				"title": "Translate in batch"
			},
			{
				"command": "extension.capitalize",
				"title": "Capitalize a sentence"
			},
			{
				"command": "extension.sort",
				"title": "Sort selections"
			},
			{
				"command": "extension.uniq",
				"title": "Unique selections"
			},
			{
				"command": "extension.join",
				"title": "Join selections"
			},
			{
				"command": "extension.reverse",
				"title": "Reverse selections"
			},
			{
				"command": "extension.shuffle",
				"title": "Shuffle selections"
			},
			{
				"command": "extension.filter",
				"title": "Filtering selections"
			}
		],
		"keybindings": [
			{
				"command": "extension.map",
				"key": "Ctrl+z",
				"mac": "Ctrl+z",
				"when": "editorTextFocus"
			},
			{
				"command": "extension.trans",
				"key": "Ctrl+t",
				"mac": "Ctrl+t",
				"when": "editorTextFocus"
			},
			{
				"command": "extension.capitalize",
				"key": "Ctrl+c",
				"mac": "Ctrl+c",
				"when": "editorTextFocus"
			},
			{
				"command": "extension.sort",
				"key": "Ctrl+s",
				"mac": "Ctrl+s",
				"when": "editorTextFocus"
			},
			{
				"command": "extension.uniq",
				"key": "Ctrl+u",
				"mac": "Ctrl+u",
				"when": "editorTextFocus"
			},
			{
				"command": "extension.join",
				"key": "Ctrl+Shift+j",
				"mac": "Ctrl+Shift+j",
				"when": "editorTextFocus"
			},
			{
				"command": "extension.reverse",
				"key": "Ctrl+k",
				"mac": "Ctrl+k",
				"when": "editorTextFocus"
			},
			{
				"command": "extension.shuffle",
				"key": "Ctrl+m",
				"mac": "Ctrl+m",
				"when": "editorTextFocus"
			},
			{
				"command": "extension.filter",
				"key": "Ctrl+Shift+F",
				"mac": "Ctrl+Shift+F",
				"when": "editorTextFocus"
			}
		],
		"configuration": {
			"type": "object",
			"title": "translate configuration",
			"properties": {
				"vampire.translate.youdao.appKey": {
					"type": "string",
					"default": "",
					"description": "有道翻译appKey"
				},
				"vampire.translate.youdao.appSecret": {
					"type": "string",
					"default": "",
					"description": "有道翻译appSecret"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"test-compile": "tsc -p ./",
		"test-watch": "tsc -watch -p ./",
		"pretest": "npm run test-compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.59.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.2.2",
		"@types/node": "14.x",
		"eslint": "^7.27.0",
		"@typescript-eslint/eslint-plugin": "^4.26.0",
		"@typescript-eslint/parser": "^4.26.0",
		"glob": "^7.1.7",
		"mocha": "^8.4.0",
		"typescript": "^4.3.2",
		"vscode-test": "^1.5.2",
		"ts-loader": "^9.2.2",
		"webpack": "^5.38.1",
		"webpack-cli": "^4.7.0"
	},
	"dependencies": {
		"colors": "^1.4.0",
		"ramda": "^0.27.1",
		"table": "^6.7.1"
	}
}
